<body id="doctors_view">
  <h1 class="text-center">Especialistas de Selfcare:</h1>
  <div class="wrapper_doctor">
    <div class="row">
    <% @doctors.each do |user| %>
      <div class="col-md-6 col-lg-3">
        <div class="card_doctor ms-5">
        <%= image_tag user.photo, class:"card-img-top" if user.photo.attached?  %>
          <div class="card_doctor-body">
            <h5 class="card_doctor-title"><%= user.first_name %> <%= user.last_name  %></h5>
            <p class="card_doctor-text text_doctor">Especialidad: <%= user.doctor.specialty %></p>
          </div>
        </div>
      </div>
    <% end %>
    </div>
  </div>


