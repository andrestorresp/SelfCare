<div class="container">
  <div class="row">
    <div class="col-md-8 blog-card-container">
      <div class="blogg-border mb-3">
        <div class="card-body d-flex flex-row">
          <div class="me-3">
            <% if @blog.photo.present? %>
              <%= cl_image_tag @blog.photo.key, alt: @blog.title, class: "image" %>
            <% else %>
              <%= image_tag "blogs/Blog.jpg", alt: "Imagen por defecto", class: "img-fluid mb-3" %>
            <% end %>
          </div>
          <div>
            <h2 class="card-title mb-3"><%= @blog.title %></h2>
            <p class="texto-cardd comentario"><%= @blog.comment %></p>
            <a href="javascript:history.back()" class="btn btn-primary">Volver</a>
          </div>
        </div>
      </div>
    </div>
    <%# perfil-user %>

    <%# perfil-user %>
    <div class="col-4 d-flex justify-content-center">
      <div class="col-md-4 user-details-container card">
        <div class="card-body tarjeta-perfil">
          <div class="d-flex text-black">
            <div class="flex-shrink-0">
              <%= cl_image_tag @blog.user.photo.key, alt: "Imagen de perfil", class: "imagen-cuadrada" %>
            </div>
            <div class="flex-grow-1 ms-3">
              <h5 class="mb-1"><%= @blog.user.first_name %> <%= @blog.user.last_name %></h5>
              <p><%= @blog.user.email %></p>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
