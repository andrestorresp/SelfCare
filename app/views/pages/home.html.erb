<div class="banner justify-content-center align-items-center ">
  <div class="text-center">
    <% if user_signed_in? && current_user.role == false  %>
      <h1>Bienvenidos <br>a SELFCARE</h1>
      <p>El cuidado de tu historial medico <br>en tus manos.</p>
      <button class="btn">Buscar medicos</button>
    <% elsif user_signed_in? && current_user.role == true   %>
      <h2 id="titulodoc">Ingrese datos del Px</h2>
      <%= form_with url: buscar_path(), method: :get , id:"buscador"  do %>
        <div class="lupa">
          <%= text_field_tag :query,
              params[:query],
              class: "searchTerm",
              placeholder: "Cedula, Pasaporte, DNI..."
              pattern: "[0-9]*",
              title: "Por favor, ingrese solo números..."
          %>
          <%#= submit_tag class: "searchButton" %>
          <i class="fa fa-search"></i>
        </div>
      <% end %>
      <p>Se debera ingresar UN dato numerico de identificación </p>
    <% else %>
      <h1>SELFCARE</h1>
      <p>El cuidado de tu historial medico <br>en tus manos.</p>
      <%= link_to "Registrarse", new_user_registration_path, class:"btn"%>
    <% end  %>
  </div>
</div>

