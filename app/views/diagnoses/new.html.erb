          <%= f.label :diabetes %>
          <%= f.check_box :diabetes %>
          <%= f.label :hypertension %>
          <%= f.check_box :hypertension %>
          <%= f.label :tuberculosis %>
          <%= f.check_box :tuberculosis %>
          <%= f.label :cancer %>
          <%= f.check_box :cancer %>
          <%= f.label :other_diseases %>
          <%= f.text_area :other_diseases %>
          <%= f.label :other_details %>
          <%= f.text_area :other_details %>
          <%= f.submit %>
        </div>
